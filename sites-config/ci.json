{
  "artifactStructure": {
    "assets": [
      {
        "root": "dist/"
      }
    ],
    "features": "sites-config/features.json",
    "plugins": [
      {
        "pluginName": "Generator",
        "sourceFiles": [
          {
            "root": ".yext/plugin",
            "pattern": "**/*.{ts,json}"
          },
          {
            "root": ".yext/",
            "pattern": "manifest.json"
          },
          {
            "pattern": "dist/*.{js,json}"
          },
          {
            "pattern": "dist/assets/server/*.js"
          },
          {
            "pattern": "dist/assets/*.js"
          }
        ],
        "event": "ON_PAGE_GENERATE",
        "functionName": "Generate"
      }
    ]
  },
  "dependencies": {
    "installDepsCmd": "npm install",
    "requiredFiles": ["package.json", "package-lock.json", ".npmrc"]
  },
  "buildArtifacts": {
    "buildCmd": "npm run directbuild"
  },
  "livePreview": {
    "serveSetupCmd": ":"
  }
}
